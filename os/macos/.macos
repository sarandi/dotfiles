function Finder(){
	open -a /System/Library/CoreServices/Finder.app $1;
}

# openFinderDir
# arg 1: directory to open in finder
# arg 2: if set to cd, the current CLI window will cd into the arg1 dir
function openFinderDir(){
	if [ "$2" == "cd" ]
	then
		cd $1; #"/Users/testuser/Documents/_my_library/_Projects/__project_notes";
	fi

	Finder $1; #"/Users/testuser/Documents/_my_library/_Projects/__project_notes";
}

# cd into whatever is the forefront Finder window.
function cdf() {  # short for cdfinder [1]
  cd "`osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)'`"
}

